@import '../../components/vendors/filmDetail/filmDetail.wxss';
@import '../../components/vendors/casts/casts.wxss';

.popover{
    background-color: white;
    position: absolute;
    z-index: 999;
    border-radius: 5%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.mask{
    background-color: rgba(0, 0, 0, 0.6);
    position: absolute;
    z-index: 99;
    top:0rpx;
    left: 0rpx;
    right: 0rpx;
    bottom: 0rpx;
}
.celebrity{
    display: flex;
    flex-direction: column;

}
.cb-name{
    margin-bottom: 5rpx;
}
.cb-name_en{
    color: #aaa;
    font-size: 20rpx;
    margin-bottom: 10rpx;
}
.cb-avatar{
    width: 100rpx;
    height:100rpx;
    border-radius: 50%;
}
.cb-birth{
    font-style: italic;
}